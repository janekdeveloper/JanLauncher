{
  "name": "jan-launcher",
  "version": "1.0.0",
  "private": true,
  "description": "JanLauncher - custom Hytale launcher",
  "homepage": "https://github.com/janekdeveloper/JanLauncher",
  "repository": {
    "type": "git",
    "url": "https://github.com/janekdeveloper/JanLauncher.git"
  },
  "author": {
    "name": "Jan Dev",
    "email": "jandev.official@gmail.com"
  },
  "main": "dist/main/app.js",
  "scripts": {
    "dev": "concurrently -k \"tsc -p tsconfig.main.json -w\" \"vite\" \"wait-on tcp:5173 file:dist/main/app.js file:dist/preload/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "tsc -p tsconfig.main.json && vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:all": "npm run build && electron-builder --linux --win"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "tar": "^7.5.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.8",
    "electron-builder": "^24.13.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.janlauncher.app",
    "productName": "JanLauncher",
    "files": [
      "dist/**",
      "!dist/build/**",
      "package.json",
      "build/icon.png",
      ".env"
    ],
    "directories": {
      "buildResources": "build",
      "output": "compiled"
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icon.png",
      "category": "Game",
      "maintainer": "Jan Dev <jandev.official@gmail.com>",
      "desktop": {
        "Name": "JanLauncher",
        "Comment": "JanLauncher - custom Hytale launcher",
        "Categories": "Game;",
        "Icon": "jan-launcher"
      },
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "icon.png",
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "janekdeveloper",
      "repo": "JanLauncher"
    },
    "generateUpdatesFilesForAllChannels": true,
    "appImage": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "deb": {}
  }
}
